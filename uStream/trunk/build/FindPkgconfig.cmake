
FIND_PROGRAM(PKGCONFIG_EXECUTABLE pkg-config
${GENERIC_BIN_DIRS}
${PKGCONFIG_CUSTOM_PATH}
${PKGCONFIG_CUSTOM_PATH}/bin
)

EXEC_PROGRAM(pkg-config 
ARGS --version
OUTPUT_VARIABLE PKGCONFIG_VERSION
RETURN_VALUE PKGCONFIG_RETURN_VALUE
)

IF (PKGCONFIG_EXECUTABLE)
  SET(PKGCONFIG_FOUND "YES")
  MESSAGE( "-- Looking for pkg-config ............ ${PKGCONFIG_EXECUTABLE},  ${PKGCONFIG_VERSION}")
ELSE (PKGCONFIG_EXECUTABLE)
  MESSAGE( "-- Looking for pkg-config ............ not found!")
ENDIF (PKGCONFIG_EXECUTABLE)
